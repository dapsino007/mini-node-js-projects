<%- include('header') -%>
    <div class="box" id="heading">
      <h1><%=title%> </h1>
      <p class="date">(<%=date%>)</p>
    </div>

    <div class="box">
      <% newItem.forEach(item => {%>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" onChange="this.form.submit()" name= "checkbox" value="<%=item._id%>">
            <input type="hidden" name="listname" value="<%=title%>">
            <p><%=item.name%> </p>
          </div>
        </form>
      <%}) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newtodo" placeholder="New Item" autocomplete="off">
        <button type="submit" name="listbutton" value=<%=title%>>+</button>
      </form>
    </div>
<%- include('footer') -%>
